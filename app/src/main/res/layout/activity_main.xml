<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariogago.introductionworkshop.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/margin_triple">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_watch_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginBottom="64dp"
                />
        </FrameLayout>
        <EditText
            android:id="@+id/main_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:layout_marginBottom="@dimen/margin_single"
            android:textAppearance="?android:textAppearanceMedium"
            />
        <Button
            android:id="@+id/main_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/next"
            android:padding="@dimen/margin_triple"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearance"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="@dimen/margin_single"
            />
    </LinearLayout>
</FrameLayout>
