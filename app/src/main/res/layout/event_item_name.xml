<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_events"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_double"
    android:clickable="true"
    tools:context="com.example.mariogago.introductionworkshop.EventsActivity"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/event_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:backgroundTint="@color/card_image_grey"
            android:contentDescription="@null"
            tools:src="@drawable/ic_apps_black_24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_double"
            >

            <TextView
                android:id="@+id/event_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="@dimen/margin_single"
                android:text="Introduction to Android App Development"
                />

            <TextView
                android:id="@+id/event_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location: Coimbra"
                android:layout_marginBottom="@dimen/margin_half"
                />

            <TextView
                android:id="@+id/event_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic"
                android:text="5 Feb. 2017"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>